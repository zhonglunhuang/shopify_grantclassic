        "default": "rgba(0,0,0,0)"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "rgba(0,0,0,0)"
      }, {
        "type": "color",
        "id": "text_color_mobile",
        "label": "Text color on mobile",
        "default": "rgba(0,0,0,0)"
      }, {
        "type": "color",
        "id": "button_background",
        "label": "Button background",
        "default": "rgba(0,0,0,0)"
      }, {
        "type": "color",
        "id": "button_text_color",
        "label": "Button text",
        "default": "rgba(0,0,0,0)"
      }
    ],
    "presets": [
      {
        "name": "Image with text block",
        "settings": {}
      }
    ]
  }
