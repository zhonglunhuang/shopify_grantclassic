          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          },
          {
            "value": "overlap_left",
            "label": "Overlap left"
          }, {
            "value": "overlap_right",
            "label": "Overlap right"
          }
        ],
        "default": "left"
